.form-group{clear: both;}

.form-group input[type=text],
.form-group input[type="date"],
.form-group textarea,
.form-group select {
  width: 92% !important;
  border: 1px solid #cccccc;
  border-radius: 4px;
  margin: 5px;
}

.col-xs-11 input[type=text]{
  width: 90% !important;
  border: 1px solid #cccccc;
  border-radius: 4px;
}

.col-xs-10 select:focus {
   outline: none;
}

.pager li>a, .pager li>span {
  display: inline;
  padding: 5px 10px; 
  border-radius: 4px;
}

.nav>li>a:hover, 
.nav>li>a:focus {
    color: #ffffff;
    background-color: #446e9b;
    border-radius: 2px;
}
.imgAncilliary
  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 360px;
  height: 490px;
  
.ng-pageslide
  background: #eee;
  overflow-y: auto !important;

body.ng-pageslide-body-open::before
  content: '.';
  display: block;
  position: absolute;
  top: 0;
  background-color: rgb(0,0,0);
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  opacity: 0.5;
  transition: opacity 1s;
 
body.ng-pageslide-body-closed::before
  transition: opacity 1s;
  opacity: 0;
  content: '.';
  display: block;
  position: absolute;
  top: 0;
  background-color: rgb(0,0,0);
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  pointer-events: none;
  
