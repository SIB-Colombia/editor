.panel.panel-default
	.panel-heading
		spant
			| {{"simplePliCTerm.name.Distribution"|translate}}
			spant
			a.btn-xs(data-container='body', data-toggle='popover', data-placement='left', title='{{"simplePliCTerm.definition.Distribution"|translate}}')
				span.glyphicon.glyphicon-info-sign
	.panel-body
		.selected-item(ng-repeat='distribution in formData.distribution.distributionAtomized.distributionOpt2')
			div(ng-show='distribution')
			| {{distribution.country}}
			| {{distribution.stateProvince}}
			| {{distribution.county}}
		.form-group
			label.col-xs-2.control-label(for='distributionScope', translate='') simplePliCTerm.name.DistributionScope
			.col-xs-10
			div(ng-repeat='ds in distributionScope')
				input(type='checkbox', ng-model='ds.checked', ng-click='updateSelectionDistributionScope(ds, publicationDatePrecision)')
				| 							{{ds.name}}
		.form-group
			label.col-xs-2.control-label(for='temporalCoverage', translate='') simplePliCTerm.name.TemporalCoverage
			.col-xs-10
			label {{simplePliCTerm.name.startDate|translate}} 
			input#startValidateDate(type='date', ng-model='distributionClass.temporalCoverage.startDate')
			label {{simplePliCTerm.name.endDate|translate}} 
			input#endValidateDate(type='date', ng-model='distributionClass.temporalCoverage.endDate')
		.form-group
			label.col-xs-2.control-label(for='temporalCoverage', translate='') simplePliCTerm.name.countryCode
			.col-xs-10
			div(ng-controller='UbicacionCtrl')
				select(ng-model='distributionOpt2.country', ng-options='attr.countryName as attr.countryName for attr in ubicacion ')
				option(value='') - Seleccione -
		.form-group
			label.col-xs-2.control-label(for='temporalCoverage', translate='') simplePliCTerm.name.stateProvince
			.col-xs-10
			div(ng-controller='UbicacionCtrl')
				select(ng-model='distributionOpt2.stateProvince', ng-disabled='!distributionOpt2.country', ng-options='item.departmentName as item.departmentName for item in selectedAttr.departments ')
				option(value='') - Seleccione -
		.form-group
			label.col-xs-2.control-label(for='temporalCoverage', translate='') simplePliCTerm.name.county
			.col-xs-10
			div(ng-controller='UbicacionCtrl')
				select(ng-model='distributionOpt2.county', ng-disabled='!distributionOpt2.country || !distributionOpt2.stateProvince', ng-options='item.countyName as item.countyName for item in selectedAttr2.counties ')
				option(value='') - Seleccione -
		button.btn.btn-success.btn-sm.pull-right(ng-click='addDistributionOpt2(distributionClass.distributionAtomized,distributionOpt2)') Guardar 
		.form-group
			hr
			label(for='distributionUnstructured', translate='') simplePliCTerm.name.DistributionUnstructured
			em (opcional)
			a.btn-xs(data-container='body', data-toggle='popover', data-placement='left', title='{{"simplePliCTerm.definition.DistributionUnstructured"|translate}}')
			span.glyphicon.glyphicon-info-sign
			textarea(rows='3', name='distribution', ng-model='distributionClass.distributionUnstructured')
			div(ng-repeat='ancillary in distributionClass.ancillaryData')
			| {{ancillary.license}} - {{ancillary.rights}} - {{ancillary.mediaURL}}
			.form-group
				div(ng-controller='CollapseDemoCtrl')
				button.btn.btn-primary.btn-sm.pull-right(type='button', ng-click='isCollapsed = !isCollapsed') {{"simplePliCTerm.name.AncillaryData"|translate}}
				.col-xs-10
				div(collapse='isCollapsed')
					input(type='text', ng-model='ancillaryData.license', placeholder='{{"simplePliCTerm.name.license"|translate}}')
					input(type='text', ng-model='ancillaryData.rights', placeholder='{{"simplePliCTerm.name.rights"|translate}}')
					input(type='text', ng-model='ancillaryData.bibliographicCitation', placeholder='{{"simplePliCTerm.name.bibliographicCitation"|translate}}')
					input(type='text', ng-model='ancillaryData.source', placeholder='{{"simplePliCTerm.name.source"|translate}}')
					input(type='text', ng-model='ancillaryData.mediaURL', placeholder='{{"simplePliCTerm.name.mediaURL"|translate}}')
					button.btn.btn-primary.btn-sm(type='button', ng-click='addAncillaryData(distributionClass.ancillaryData,ancillaryData)', translate='')
					| Guardar
					span.glyphicon.glyphicon-plus