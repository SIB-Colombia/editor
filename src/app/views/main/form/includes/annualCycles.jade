.panel.panel-default
	.panel-heading
		spant
			| {{"simplePliCTerm.name.AnnualCycles" | translate}}
			spant
			a.btn-xs(data-container='body', data-toggle='popover', data-placement='left', title='{{"simplePliCTerm.definition.AnnualCycles"|translate}}')
				span.glyphicon.glyphicon-info-sign
	.panel-body
		.selected-item(ng-repeat='annualCycleAtomized in formData.annualCycle.annualCycleAtomized')
			div(ng-show='annualCycleAtomized')
			div Evento: {{annualCycleAtomized.Event}}
			div Start Time: {{annualCycleAtomized.startTimeInterval| date: 'yyyy-MM-dd'}}
			div End Time: {{annualCycleAtomized.endTimeInterval| date: 'yyyy-MM-dd'}}
		.form-group
			label.col-xs-2.control-label(for='event', translate='') simplePliCTerm.name.Event
			.col-xs-10
				.panel(ng-controller='CheckBoxCrtl')
					div(ng-repeat='eve in event')
					input(type='checkbox', ng-model='eve.checked', ng-click='updateSelection(eve, event, annualCycleAtomizedType.Event)')
					| 								{{eve.name}}
		.form-group
			label.col-xs-2.control-label(for='startTimeInterval', translate='') simplePliCTerm.name.startTimeInterval
			.col-xs-10
				input#startTimeInterval(type='date', ng-model='annualCycleAtomizedType.startTimeInterval')
		.form-group
			label.col-xs-2.control-label(for='endTimeInterval', translate='') simplePliCTerm.name.endTimeInterval
			.col-xs-10
				input#endTimeInterval(type='date', ng-model='annualCycleAtomizedType.endTimeInterval')
		div(ng-repeat='ancillary in annualCycleAtomizedType.ancillaryData')
			| {{ancillary.license}} - {{ancillary.rights}} - {{ancillary.mediaURL}}
		.form-group
			div(ng-controller='CollapseDemoCtrl')
				.form-group
					button.btn.btn-primary.btn-sm.pull-right(type='button', ng-click='isCollapsed = !isCollapsed') {{"simplePliCTerm.name.AncillaryData"|translate}}
					.col-xs-10
					div(collapse='isCollapsed')
						input(type='text', ng-model='ancillaryData.license', placeholder='{{"simplePliCTerm.name.license"|translate}}')
						input(type='text', ng-model='ancillaryData.rights', placeholder='{{"simplePliCTerm.name.rights"|translate}}')
						input(type='text', ng-model='ancillaryData.bibliographicCitation', placeholder='{{"simplePliCTerm.name.bibliographicCitation"|translate}}')
						input(type='text', ng-model='ancillaryData.source', placeholder='{{"simplePliCTerm.name.source"|translate}}')
						input(type='text', ng-model='ancillaryData.mediaURL', placeholder='{{"simplePliCTerm.name.mediaURL"|translate}}')
						button.btn.btn-primary.btn-sm(type='button', ng-click='addAncillaryData(annualCycleAtomizedType.ancillaryData,ancillaryData)', translate='')
						| Guardar
						span.glyphicon.glyphicon-plus
		button.btn.btn-success.btn-sm.pull-right(type='button', ng-click='addAnnualCycleAtomizedType(formData.annualCycle.annualCycleAtomized, annualCycleAtomizedType)') Guardar
		.form-group
			hr
			label(for='annualCyclesUnstructured', translate='') simplePliCTerm.name.AnnualCyclesUnstructured
			em (opcional)
			a.btn-xs(data-container='body', data-toggle='popover', data-placement='left', title='{{"simplePliCTerm.definition.AnnualCyclesUnstructured"|translate}}')
				span.glyphicon.glyphicon-info-sign
			textarea(rows='3', name='annualCycle', ng-model='formData.annualCycle.annualCycleUnstructured')
			div(ng-repeat='ancillary in formData.annualCycle.ancillaryData')
				| {{ancillary.license}} - {{ancillary.rights}} - {{ancillary.mediaURL}}
			div(ng-controller='CollapseDemoCtrl')
				.form-group
					button.btn.btn-primary.btn-sm.pull-right(type='button', ng-click='isCollapsed = !isCollapsed') {{"simplePliCTerm.name.AncillaryData"|translate}}
						.col-xs-10
						div(collapse='isCollapsed')
							input(type='text', ng-model='ancillaryData.license', placeholder='{{"simplePliCTerm.name.license"|translate}}')
							input(type='text', ng-model='ancillaryData.rights', placeholder='{{"simplePliCTerm.name.rights"|translate}}')
							input(type='text', ng-model='ancillaryData.bibliographicCitation', placeholder='{{"simplePliCTerm.name.bibliographicCitation"|translate}}')
							input(type='text', ng-model='ancillaryData.source', placeholder='{{"simplePliCTerm.name.source"|translate}}')
							input(type='text', ng-model='ancillaryData.mediaURL', placeholder='{{"simplePliCTerm.name.mediaURL"|translate}}')
							button.btn.btn-primary.btn-sm(type='button', ng-click='addAncillaryData(formData.annualCycle.ancillaryData,ancillaryData)', translate='')
							| Guardar
							span.glyphicon.glyphicon-plus