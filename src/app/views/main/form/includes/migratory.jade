.panel.panel-default
	.panel-heading
		spant
			| {{"simplePliCTerm.name.Migratory" | translate}}
			spant
			a.btn-xs(data-container='body', data-toggle='popover', data-placement='left', title='{{"simplePliCTerm.definition.Migratory"|translate}}')
				span.glyphicon.glyphicon-info-sign
	.panel-body
		.form-group
			label.col-xs-2.control-label(for='causes', translate='') simplePliCTerm.name.Causes
			.col-xs-10
				.panel(ng-controller='CheckBoxCrtl')
					div(ng-repeat='cause in migratoryCauses')
					.action-checkbox
						input(id='{{cause.name}}', type='checkbox', value='{{cause.name}}', ng-checked='migratoryAtomizedType.causes.indexOf(cause.name) > -1', ng-click='toggleSelection(migratoryAtomizedType.causes,cause.name)')
						label(for='{{cause.name}}')
						| 							{{cause.name}}
		.form-group
			label.col-xs-2.control-label(for='causes', translate='') simplePliCTerm.name.Patterns
			.col-xs-10
				.panel(ng-controller='CheckBoxCrtl')
					div(ng-repeat='pattern in migratoryPatterns')
					.action-checkbox
						input(id='{{pattern.name}}', type='checkbox', value='{{pattern.name}}', ng-checked='migratoryAtomizedType.patterns.indexOf(pattern.name) > -1', ng-click='toggleSelection(migratoryAtomizedType.patterns,pattern.name)')
						label(for='{{pattern.name}}')
						| 							{{pattern.name}}
		.form-group
			label.col-xs-2.control-label(for='synonymStatus', translate='') simplePliCTerm.name.Routes
			.col-xs-10
				input(type='text', ng-model='migratoryAtomizedType.routes')
		.form-group
			label.col-xs-2.control-label(for='synonymStatus', translate='') simplePliCTerm.name.Season
			.col-xs-10
				input(type='text', ng-model='migratoryAtomizedType.season')
		button.btn.btn-success.btn-sm.pull-right(type='button', ng-click='addMigratoryAtomizedType(formData.migratory.migratoryAtomized,migratoryAtomizedType)') Guardar
		.form-group
			hr
			label(for='migratoryUnstructured', translate='') simplePliCTerm.name.MigratoryUnstructured
			em (opcional)
			a.btn-xs(data-container='body', data-toggle='popover', data-placement='left', title='{{"simplePliCTerm.definition.MigratoryUnstructured"|translate}}')
				span.glyphicon.glyphicon-info-sign
			textarea(rows='3', name='migratory', ng-model='formData.migratory.migratoryUnstructured')
			div(ng-repeat='ancillary in formData.migratory.ancillaryData')
				| {{ancillary.license}} - {{ancillary.rights}} - {{ancillary.mediaURL}}
			div(ng-controller='CollapseDemoCtrl')
				.form-group
					button.btn.btn-primary.btn-sm.pull-right(type='button', ng-click='isCollapsed = !isCollapsed') {{"simplePliCTerm.name.AncillaryData"|translate}}
					.col-xs-10
						div(collapse='isCollapsed')
							input(type='text', ng-model='ancillaryData.license', placeholder='{{"simplePliCTerm.name.license"|translate}}')
							input(type='text', ng-model='ancillaryData.rights', placeholder='{{"simplePliCTerm.name.rights"|translate}}')
							input(type='text', ng-model='ancillaryData.bibliographicCitation', placeholder='{{"simplePliCTerm.name.bibliographicCitation"|translate}}')
							input(type='text', ng-model='ancillaryData.source', placeholder='{{"simplePliCTerm.name.source"|translate}}')
							input(type='text', ng-model='ancillaryData.mediaURL', placeholder='{{"simplePliCTerm.name.mediaURL"|translate}}')
							button.btn.btn-primary.btn-sm(type='button', ng-click='addAncillaryData(formData.migratory.ancillaryData,ancillaryData)', translate='')
							| Guardar
							span.glyphicon.glyphicon-plus
